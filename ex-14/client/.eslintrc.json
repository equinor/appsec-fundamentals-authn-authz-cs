{
    "env": {
        "browser": false,
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4],
        // "linebreak-style": ["warn", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": 0,
        "no-unused-vars": [
            "error",
            { "vars": "all",
                "args": "after-used",
                 "ignoreRestSiblings": false
            }]
    }
}
